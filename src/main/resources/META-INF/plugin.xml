<idea-plugin>
    <id>dev.kdl</id>
    <name>KDL Lang Support</name>
    <vendor url="https://kdl.dev/">KDL</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="KDL"
                  extensions="kdl"
                  language="KDL"
                  implementationClass="dev.kdl.lang.KdlFileType" />
        <lang.parserDefinition language="KDL"
                               implementationClass="dev.kdl.lang.parser.KdlParserDefinition" />
        <lang.syntaxHighlighterFactory language="KDL"
                                       implementationClass="dev.kdl.lang.highlighter.KdlSyntaxHighlighterFactory"/>
        <lang.foldingBuilder language="KDL"
                             implementationClass="dev.kdl.lang.folding.KdlFoldingBuilder"/>
        <lang.braceMatcher language="KDL"
                           implementationClass="dev.kdl.lang.braceMatcher.KdlBraceMatcher"/>
        <lang.formatter language="KDL"
                        implementationClass="dev.kdl.lang.formatter.KdlFormattingModelBuilder"/>
        <lang.commenter language="KDL"
                        implementationClass="dev.kdl.lang.commenter.KdlCommenter"/>
    </extensions>
</idea-plugin>
